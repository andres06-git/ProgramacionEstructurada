// Ejemplo 3

int main()
{
    char nombre[20];
    char mensaje[40] = "Hola ";

    printf("Ingresa tu nombre: ");
    scanf("%s", nombre);

    strcat(mensaje, nombre);
    printf("%s, bienvenido al sistema.\n", mensaje);
}
