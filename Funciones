#include <stdio.h>
#include <stdlib.h>

float AreaRectangulo(float base, float altura)
{
    return base * altura;
}

float AreaCuadrado(float lado)
{
    return lado * lado;
}

float AreaTriangulo(float base, float altura)
{
    return (base * altura) / 2;
}

int main()
{
    int opcion; //
    float base, altura, lado, area;

    printf("=== CALCULO DE AREAS ===\n");
    printf("1. Area de un rectangulo\n");
    printf("2. Area de un cuadrado\n");
    printf("3. Area de un triangulo\n");
    printf("4. Salir\n");
    printf("- Selecciona una opcion: ");
    scanf("%d", &opcion);

    switch (opcion)
    {
        case 1:
            printf("\nArea de un rectangulo\n");
            printf("Ingresa base: ");
            scanf("%f", &base);
            printf("Ingresa altura: ");
            scanf("%f", &altura);
            area = AreaRectangulo(base, altura);
            printf("La area es: %.2f\n", area);
            break;

        case 2:
            printf("\nArea de un cuadrado\n");
            printf("Ingresa lado: ");
            scanf("%f", &lado);
            area = AreaCuadrado(lado);
            printf("La area es: %.2f\n", area);
            break;

        case 3:
            printf("\nArea de un triangulo\n");
            printf("Ingresa base: ");
            scanf("%f", &base);
            printf("Ingresa altura: ");
            scanf("%f", &altura);
            area = AreaTriangulo(base, altura);
            printf("La area es: %.2f\n", area);
            break;

        case 4:
            printf("\nHas salido del programa.\n");
            break;

        default:
            printf("\nOpcion incorrecta. Elige otra opcion.\n");
    }
}
